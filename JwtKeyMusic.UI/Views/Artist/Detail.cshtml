@model JwtKeyMusic.UI.Models.ArtistDetailViewModel

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

﻿


<div id="content" class="flex">
    <div>
        <div class="page-content page-container" id="page-content">
            <div class="padding sr">
                <!-- Hero Section -->
                <div class="page-hero">
                    <div class="media bg-media">
                        <div class="media-content" style="background-image:url(@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "/Bepop/assets/img/b10.jpg"))"></div>
                    </div>
                    <div class="pos-rlt">
                        <h1 class="display-3 font-weight-bold text-white">@Model.Name</h1>
                        <div class="py-4 toolbar align-items-center">
                            <button class="btn btn-icon btn-play btn-rounded gd-primary" data-toggle-class="" id="play-all-songs"></button>
                            <span class="text-muted">@Model.SongCount şarkı</span>
                            <button class="btn btn-sm btn-outline-light btn-rounded mx-3" data-toggle-class>
                                <span class="d-inline">Takip Et</span>
                                <span class="d-none">Takip Ediliyor</span>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="d-md-flex pos-rlt">
                    <div class="flex">
                        <!-- Navigation Tabs -->
                        <div class="d-flex">
                            <ul class="nav nav-sm text-sm nav-pills nav-rounded py-4">
                                <li class="nav-item">
                                    <a class="nav-link active" href="#tracks" data-toggle="tab">Şarkılar</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#about" data-toggle="tab">Hakkında</a>
                                </li>
                            </ul>
                        </div>

                        <!-- Tab Content -->
                        <div class="tab-content">
                            <!-- Tracks Tab -->
                            <div class="tab-pane fade show active" id="tracks">
                                <div class="heading pt-5 pb-3 d-flex">
                                    <div>
                                        <div class="text-muted sr-item">Popüler</div>
                                        <h5 class="text-highlight sr-item">Şarkılar</h5>
                                    </div>
                                    <span class="flex"></span>
                                </div>

                                @if (Model.Songs != null && Model.Songs.Any())
                                {
                                    <div class="row list-row list-index">
                                        @{
                                            int count = 0;
                                        }
                                        @foreach (var song in Model.Songs)
                                        {
                                            count++;
                                            var imageUrl = !string.IsNullOrEmpty(song.ImageUrl)
                                            ? song.ImageUrl
                                            : $"/Bepop/assets/img/c{(count % 32)}.jpg";

                                            <div class="col-12"
                                                 data-id="artist-song-@song.Id"
                                                 data-source="@song.PreviewUrl"
                                                 data-category="@Model.Name">
                                                <div class="list-item r">
                                                    <div class="media">
                                                        <a href="#" class="media-content" style="background-image:url(@imageUrl)">
                                                        </a>
                                                        <div class="media-action media-action-overlay">
                                                            <button class="btn btn-icon no-bg no-shadow hide-row" data-toggle-class>
                                                                <i data-feather="heart" class="active-fill"></i>
                                                            </button>
                                                            <button class="btn btn-raised btn-icon btn-rounded bg--white btn-play"></button>
                                                            <button class="btn btn-icon no-bg no-shadow hide-row btn-more" data-toggle="dropdown">
                                                                <i data-feather="more-horizontal"></i>
                                                            </button>
                                                            <div class="dropdown-menu dropdown-menu-right">
                                                                <a class="dropdown-item" href="#">Çal</a>
                                                                <a class="dropdown-item" href="#">Listeme Ekle</a>
                                                                <a class="dropdown-item" href="#">Paylaş</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="list-content text-center">
                                                        <div class="list-body">
                                                            <a href="#" class="list-title title ajax h-1x text-white">
                                                                @song.Title
                                                            </a>
                                                            <div class="list-subtitle subtitle d-block text-muted h-1x">
                                                                @Model.Name
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="list-action show-row">
                                                        <div class="d-flex align-items-center">
                                                            <div class="px-3 text-sm text-white d-none d-md-block">
                                                                <span class="badge badge-info">Level @song.RequiredLevel</span>
                                                            </div>
                                                            <button class="btn btn-icon no-bg no-shadow" data-toggle-class>
                                                                <i data-feather="heart" class="active-primary"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-5">
                                        <div class="mb-4">
                                            <i data-feather="music" style="width: 64px; height: 64px;" class="text-muted"></i>
                                        </div>
                                        <h4 class="text-white">Henüz şarkı yok</h4>
                                        <p class="text-muted">Bu sanatçıya ait şarkı bulunamadı.</p>
                                    </div>
                                }
                            </div>

                            <!-- About Tab -->
                            <div class="tab-pane fade" id="about">
                                <div class="heading pt-5 pb-3 d-flex">
                                    <div>
                                        <h5 class="text-highlight sr-item">Hakkında</h5>
                                    </div>
                                    <span class="flex"></span>
                                </div>
                                <div class="row">
                                    <div class="col-md-8">
                                       
                                        <div class="mt-4">
                                            <h6 class="text-white">İstatistikler</h6>
                                            <ul class="list-unstyled text-muted">
                                                <li class="py-2">
                                                    <i data-feather="music" class="text-primary"></i>
                                                    Toplam Şarkı: <strong class="text-white">@Model.SongCount</strong>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

