﻿<header id="header" class="page-header scroll-header fixed">
    <div class="navbar navbar-expand-lg">
        <a asp-controller="Default" asp-action="Index" class="navbar-brand text-white">
            <svg width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="none">
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="1" fill="#000"></circle>
                <circle cx="12" cy="12" r="2" stroke="currentColor" stroke-width="1"></circle>
                <g class="loading-spin" stroke="currentColor" stroke-width="1" style="transform-origin: 12px 12px">
                    <path d="M16.24 7.76a6 6 0 0 1 0 8.49m-8.48-.01a6 6 0 0 1 0-8.49m11.31-2.82a10 10 0 0 1 0 14.14m-14.14 0a10 10 0 0 1 0-14.14"></path>
                </g>
            </svg>
            <span class="hidden-folded d-inline l-s-n-1x">Bepop</span>
        </a>
        <div class="collapse navbar-collapse order-2 order-lg-1" id="navbarCollapse">
            @if (!string.IsNullOrEmpty(Context.Session.GetString("token")))
            {
                <ul class="navbar-nav" data-nav>
                    <li class="nav-item"><a asp-controller="Song" asp-action="Index" class="nav-link"><span class="nav-text">Keşfet</span></a></li>
                    <li class="nav-item"><a asp-controller="Artist" asp-action="Index" class="nav-link"><span class="nav-text">Sanatçılar</span></a></li>
                    <li class="nav-item"><a asp-controller="Genre" asp-action="Index" class="nav-link"><span class="nav-text">Türler</span></a></li>
                </ul>
            }
            else
            {
                <ul class="navbar-nav" data-nav>
                    <li class="nav-item"><a asp-controller="Default" asp-action="Index" class="nav-link"><span class="nav-text">Ana Sayfa</span></a></li>
                </ul>
            }

            <form class="input-group m-2 my-lg-0">
                <span class="input-group-prepend">
                    <button type="button" class="btn no-shadow no-bg px-0"><i data-feather="search"></i></button>
                </span>
                <input type="text" class="form-control no-border no-shadow no-bg typeahead" placeholder="Ara...">
            </form>
        </div>

        <ul class="nav navbar-menu order-1 order-lg-2">
            <li class="nav-item d-none d-sm-block">
                <a class="nav-link px-2" data-toggle="fullscreen" data-plugin="fullscreen">
                    <i data-feather="maximize"></i>
                </a>
            </li>

            @if (!string.IsNullOrEmpty(Context.Session.GetString("token")))
            {
                <li class="nav-item dropdown">
                    <a href="#" data-toggle="dropdown" class="nav-link d-flex align-items-center py-0 px-lg-0 px-2 text-color">
                        <span class="avatar w-24"><img src="@Url.Content("~/Bepop/assets/img/a2.jpg")" alt="..."></span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right mt-3 animate fadeIn">
                        <div class="dropdown-header">
                            Hoş geldin, <strong>@Context.Session.GetString("username")</strong>
                        </div>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#"><span>Profil</span></a>
                        <a class="dropdown-item" href="#"><span>Şarkılarım</span></a>
                        <a class="dropdown-item" href="#"><span>Beğeniler</span></a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-controller="Login" asp-action="Logout">Çıkış Yap</a>
                    </div>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Login" asp-action="Index">Giriş Yap</a>
                </li>
                <li class="d-flex align-items-center">
                    <a class="btn btn-rounded btn-sm btn-primary" asp-controller="Register" asp-action="Index" asp-route-packageId="4">Kayıt Ol</a>
                </li>
            }

            <li class="nav-item d-lg-none">
                <a href="#" class="nav-link px-2" data-toggle="collapse" data-toggle-class data-target="#navbarCollapse">
                    <i data-feather="menu"></i>
                </a>
            </li>
        </ul>
    </div>
</header>