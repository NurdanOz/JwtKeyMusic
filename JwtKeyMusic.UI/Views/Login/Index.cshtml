@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr" dir="ltr">
@await Component.InvokeAsync("_HeadComponentPartial")
<body class="layout-row bg-dark">
    <div class="d-flex flex-column flex">
        <div class="row no-gutters h-100">
            <div class="col-md-6 bg-dark bg-img" style="background-image:url('@Url.Content("~/Bepop/assets/img/b6.jpg")')">
                <div class="p-3 p-md-5 d-flex flex-column h-100">
                    <h4 class="mb-3 text-white">Bepop</h4>
                    <div class="text-fade">Müzik Web Uygulaması</div>
                    <div class="d-flex flex align-items-center justify-content-center">
                    </div>
                    <div class="d-flex text-sm text-fade">
                        <a href="#" class="text-white">Hakkında</a>
                        <span class="flex"></span>
                        <a href="#" class="text-white mx-1">Kullanım Şartları</a>
                        <a href="#" class="text-white mx-1">Gizlilik Politikası</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6" id="content-body">
                <div class="p-3 p-md-5">
                    <h5>Hoş Geldiniz</h5>
                    <p>
                        <small class="text-muted">Hesabınızı yönetmek için giriş yapın</small>
                    </p>

                    @* Başarı Mesajı *@
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Kapat">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    @* Hata Mesajı *@
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Kapat">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <form asp-action="Index" asp-controller="Login" method="post">
                        <div class="form-group">
                            <label>Kullanıcı Adı</label>
                            <input type="text" name="Username" class="form-control" placeholder="Kullanıcı adınızı girin" required>
                        </div>
                        <div class="form-group">
                            <label>Şifre</label>
                            <input type="password" name="Password" class="form-control" placeholder="Şifrenizi girin" required>
                            <div class="my-3 text-right">
                                <a href="@Url.Action("ForgotPassword", "Account")" class="text-muted">Şifremi unuttum?</a>
                            </div>
                        </div>
                        <div class="checkbox mb-3">
                            <label class="ui-check">
                                <input type="checkbox" name="RememberMe">
                                <i></i> Beni hatırla
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary mb-4">Giriş Yap</button>
                        <div>
                            Hesabınız yok mu?
                            <a href="@Url.Action("Index", "Register")" class="text-primary">Kayıt Ol</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @await Component.InvokeAsync("_ScriptComponentPartial")
</body>
</html>