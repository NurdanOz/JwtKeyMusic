            flex-direction: column;
            min-height: 450px;
        }

            .pricing-card:hover {
                transform: scale(1.03);
            }

        .bg-gradient-gold {
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2200 100%) !important;
        }

